<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@color/theamcolor"
      >



    <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageview_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:civ_border_color="@color/babypowder"
            app:civ_border_width="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_profile_users"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/textcolorblack"
            app:civ_shadow_radius="1"/>



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/babypowder"
            android:id="@+id/textview1"
            android:text="Dasun Hasantha"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/cutive_mono"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_profile"
            android:textStyle="normal"/>


</androidx.constraintlayout.widget.ConstraintLayout>